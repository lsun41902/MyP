<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".WriteActivity"
    android:weightSum="10"
    android:background="@color/MyBackground"
    >
    <EditText
        android:padding="8dp"
        android:id="@+id/write_et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="20"
        android:textSize="18sp"
        android:inputType="text"
        android:hint="Title"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background"
        />
    <LinearLayout
        android:id="@+id/write_image_layout"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:gravity="center"
        android:layout_below="@id/write_et_title"
        android:background="@drawable/background">

        <ImageView
            android:id="@+id/write_iv_1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:clickable="true"
            android:background="@drawable/custom_button"
            android:src="@drawable/pic"/>
        <ImageView
            android:id="@+id/write_iv_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:clickable="true"
            android:background="@drawable/custom_button"
            android:src="@drawable/pic"/>
        <ImageView
            android:id="@+id/write_iv_3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:clickable="true"
            android:background="@drawable/custom_button"
            android:src="@drawable/pic"/>
    </LinearLayout>
    <EditText
        android:padding="8dp"
        android:layout_marginTop="4dp"
        android:id="@+id/write_et_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:hint="Max 200"
        android:layout_below="@id/write_image_layout"
        android:maxLength="200"
        android:lines="15"
        android:autoSizeMaxTextSize="500dp"
        android:gravity="top"/>

    <Button
        android:id="@+id/btnOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="올리기"
        android:textColor="@color/MyText"
        android:textStyle="bold"
        android:background="@drawable/custom_button"
        android:layout_below="@id/write_et_text"
        android:layout_alignParentRight="true"
        android:onClick="clickOK"/>


</RelativeLayout>