<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".WriteActivity"
    android:weightSum="10"
    android:background="@color/MyBackground"
    >
    <EditText
        android:padding="8dp"
        android:layout_weight="1"
        android:id="@+id/wirte_et_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:maxLength="20"
        android:textSize="18sp"
        android:inputType="text"
        android:hint="Title"
        android:background="@drawable/background"
        />
    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="3"
        android:gravity="center"
        android:background="@drawable/background">

        <ImageView
            android:id="@+id/wirte_iv_1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:clickable="true"
            android:background="@drawable/custom_button"
            android:src="@drawable/pic"/>
        <ImageView
            android:id="@+id/wirte_iv_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:clickable="true"
            android:background="@drawable/custom_button"
            android:src="@drawable/pic"/>
        <ImageView
            android:id="@+id/wirte_iv_3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:clickable="true"
            android:background="@drawable/custom_button"
            android:src="@drawable/pic"/>
    </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="6"
    android:scrollbars="vertical">
    <EditText
        android:padding="8dp"
        android:layout_marginTop="4dp"
        android:id="@+id/wirte_et_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:hint="Max 500"
        android:maxLength="500"
        android:lines="19"
        android:autoSizeMaxTextSize="500dp"
        android:gravity="top"/>
</ScrollView>
    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:layout_weight="1"
            android:id="@+id/btnCANCEL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="취소"
            android:textColor="@color/MyText"
            android:textStyle="bold"
            android:background="@drawable/custom_button"
            android:onClick="clickCANCEL"/>
    <Button
        android:layout_weight="1"
        android:id="@+id/btnOK"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="올리기"
        android:textColor="@color/MyText"
        android:textStyle="bold"
        android:background="@drawable/custom_button"
        android:onClick="clickOK"/>
    </LinearLayout>


</LinearLayout>