<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/MyBackground"
    app:cardElevation="4dp"
    app:contentPadding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/donga_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:textSize="24sp"
            android:textColor="@color/MyText"
            android:textStyle="bold"
            android:maxLines="1"
            android:padding="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/donga_iv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/donga_tv_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="text"
                android:maxLines="3"
                android:textSize="18sp"
                android:padding="4dp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/donga_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="0000/00/00 00:00"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>